@model BusinessesInterface.Models.Address

@{
    ViewBag.Title = "List of Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="table-page">

    <h2 class="heading2">Sockets-Tables Mapping</h2>

    <table class="table">
        <tr>
            <th>
                @Html.LabelForModel("Socket Number")
            </th>
            <th>
                @Html.LabelForModel("Table Number")
            </th>
        </tr>

        @foreach (var device in Model.Devices)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => device.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => device.Table)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = device.Id }, new { @class = "button-link-small" })
                </td>
            </tr>
        }

    </table>


    <p> </p>
    <span class="box">
        <a class="button-link" href="/DeviceUsage/Index" style="text-decoration: none;">Back to all actions</a>
    </span>
    <p> </p>

</div>
<script src="~/bundles/jqueryval"></script>
