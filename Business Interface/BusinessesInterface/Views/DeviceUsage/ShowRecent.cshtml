@model BusinessesInterface.Models.Address

@{
    ViewBag.Title = "List of Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-page">
    <h2 class="heading2">Usage History</h2>

    <table class="table">
        <tr>
            <th>
                @Html.LabelForModel("Socket Number")
            </th>
            <th>
                @Html.LabelForModel("Time Stamp")
            </th>
            <th></th>
        </tr>

        @foreach (var device in Model.Devices)
        {

            @foreach (var time in device.HistoryDateTime)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => device.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => time)
                    </td>
                </tr>
            }
        }
        <tr>
            <th>
                @Html.LabelForModel("Over All Usage")
            </th>
        </tr>
    </table>

    <p> </p>
    <span class="box">
        <a class="button-link" href="/DeviceUsage/ShowAll" style="text-decoration: none;">All History</a>
    </span>
    <p> </p>

    <p> </p>
    <span class="box">
        <a class="button-link" href="/DeviceUsage/Index" style="text-decoration: none;">Back to all actions</a>
    </span>
    <p> </p>
</div>


<script src="~/bundles/jqueryval"></script>
