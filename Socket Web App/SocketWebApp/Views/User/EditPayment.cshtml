@model SocketWebApp.Models.User


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-design">

    <h2 class="heading2">Edit Payment Method</h2>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <div class="checkbox">
                @Html.HiddenFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <div class="checkbox">
                @Html.HiddenFor(model => model.Mobile)
                @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="form-label" for="CardNumber">Credit Card Number</label>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.CardNumber, new { htmlAttributes = new { @class = "form-editor" } })
                @Html.ValidationMessageFor(model => model.CardNumber, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="form-label" for="Expiry">Credit Card Expiry</label>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Expiry, new { htmlAttributes = new { @class = "form-editor" } })
                @Html.ValidationMessageFor(model => model.Expiry, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="form-label" for="CVV">CVV</label>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.CVV, new { htmlAttributes = new { @class = "form-editor" } })
                @Html.ValidationMessageFor(model => model.CVV, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <div class="checkbox">
                @Html.HiddenFor(model => model.UserName)
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <div class="checkbox">
                @Html.HiddenFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <p> </p>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="submit-button" />
        </div>
    </div>
</div>
}


<script src="~/bundles/jqueryval"></script>