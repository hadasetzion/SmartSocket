@model SocketWebApp.Models.Credentials

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login","User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-design">
    <h2 class="heading2">Login</h2>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


<div class="form-group">
    <label class="form-label" for="Id">Id</label>
    <div class="col-md-10">
        @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-editor" } })
        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <label class="form-label" for="UserName">User Name</label>
    <div class="col-md-10">
        <div class="checkbox">
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-editor" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

<div class="form-group">
    <label class="form-label" for="Password">Password</label>
    <div class="col-md-10">
        <div class="checkbox">
            @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-editor" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

    <p> </p>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Log In" class="submit-button" />
        </div>
    </div>
</div>
}

<script src="~/bundles/jqueryval"></script>